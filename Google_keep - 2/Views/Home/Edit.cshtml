@model Google_keep___2.Models.Notities
@{
    ViewBag.Title = "Edit note";
}

<h2>Edit Note</h2>

<p>You're logged in as <strong>@User.Identity.Name</strong>.</p>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true);
    <div>
        <div class="editor-field">
            @Html.Hidden("UserId", (object)ViewBag.UserId)
        </div>
        <div class="editor-field">
            @Html.Hidden("UserName", (object)ViewBag.UserName)
        </div>
        <div class="editor-label">
            <b>Title</b>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NotitieTitle)
            @Html.ValidationMessageFor(n => n.NotitieTitle)
        </div>
        <div class="editor-label">
             <b>Note Group</b>
        </div>
        <div class="editor-field">
            @Html.DropDownList("NotitieGroupId", String.Empty)
            @Html.ValidationMessageFor(n => n.NotitieGroupId)
        </div>
        <div class="editor-label">
             <b>Description</b>
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.NotitieDescription, new { @rows="10" })
            @Html.ValidationMessageFor(n => n.NotitieDescription)
        </div>
        <div class="editor-label">
            <b>Date and Time</b>
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.DateTime)
            @Html.ValidationMessageFor(model => model.DateTime)
        </div>
        <input type="submit" value="Edit" />|@Html.ActionLink("Back", "Index")
    </div>
}
